<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.sourabh.wifi_demo.Join_Contest">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/con_join_name"
        android:layout_marginTop="60dp"
        android:focusableInTouchMode="true"
        android:hint="Enter the contest name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/con_join_pass"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/con_join_name"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:hint="Enter password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Search Contest"
        android:id="@+id/btn_search"
        android:onClick="search_contest"
        android:layout_below="@+id/con_join_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Join"
        android:id="@+id/btn_join"
        android:layout_marginTop="60dp"
        android:onClick="join_contest"
        android:layout_below="@+id/btn_search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
